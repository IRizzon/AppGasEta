<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idTitulo"
                android:layout_width="225dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center"
                android:text="App GasEta"
                android:textColor="#2B6365"
                android:textSize="26sp"
                android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#F02B6365"
                    app:hintTextColor="#F02B6365"
                    android:layout_gravity="center">

                <EditText
                    android:id="@+id/idGas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:hint="@string/txt_hint_edit_Gasolina"
                    android:inputType="textPersonName"
                    android:textColorLink="#F02B6365"
                    android:textSize="18dp"
                    android:textCursorDrawable="@color/Dark_Green"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#F02B6365"
                    app:hintTextColor="#F02B6365"
                    android:layout_gravity="center">

                <EditText
                    android:id="@+id/idEta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:hint="@string/txt_hint_edit_Etanol"
                    android:inputType="textPersonName"
                    android:textColorLink="#F02B6365"
                    android:textSize="18dp"
                    android:textCursorDrawable="@color/Dark_Green"/>
                </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/idCalc"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F02B6365"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Calcular" />


            <TextView
                android:id="@+id/idResultado"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center"
                android:text="@string/txt_Resultado"
                android:textColor="#F02B6365"
                android:textSize="22dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/idlistaposto"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/idClear"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="#F02B6365"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Limpar" />

            <Button
                android:id="@+id/idSave"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#F02B6365"
                android:enabled="false"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Salvar" />


            <Button
                android:id="@+id/idEnd"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#F8BE11"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Finalizar"/>

        </LinearLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>